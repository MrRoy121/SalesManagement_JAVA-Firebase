<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/login_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/image_picker"
                android:src="@drawable/gallery"
                android:layout_gravity="center"/>

            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="2"
                    android:id="@+id/user_pic"
                    android:src="@mipmap/boy"
                    android:layout_marginTop="20dp" />

                <ProgressBar
                    android:id="@+id/progressBar8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/progress_bar"
                    android:layout_gravity="center"
                    android:visibility="invisible" />

            </FrameLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/image_uploader"
                android:src="@drawable/upload"
                android:layout_gravity="center"/>

        </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="Utkarsh Garg"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_margin="8dp"
        android:textSize="33sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/phonebook_new"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:linksClickable="true"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="7753839036"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
        <View android:layout_height="1.5dp"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/separator1" />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/email" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/emailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:linksClickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="utkarsh22garg@gmail.com"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
            <View android:layout_height="1.5dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/separator2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/company_new" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/organisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:linksClickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="Visa"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
            <View android:layout_height="1.5dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/separator3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/change_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            android:text="Change Password"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:linksClickable="true"
            android:clickable="false"/>
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:background="@color/colorAlert"
        >


        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAlert"
            android:layout_margin="4dp"
            android:textColor="#ffffff"
            android:text="Logout"
            android:textSize="25sp"
            android:linksClickable="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="false"/>
    </LinearLayout>

</LinearLayout>